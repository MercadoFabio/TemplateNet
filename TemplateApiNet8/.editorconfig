[*.cs]

# SA1623: Property summary documentation should match accessors
dotnet_diagnostic.SA1623.severity = none
dotnet_diagnostic.IDE0005.severity = error
dotnet_diagnostic.CS8629.severity = none

[*.cs]

# Reglas de nomenclatura para propiedades

dotnet_naming_rule.properties_should_be_pascal_case.severity = error
dotnet_naming_rule.properties_should_be_pascal_case.symbols = properties
dotnet_naming_rule.properties_should_be_pascal_case.style = pascal_case

# Especificaciones de símbolos para propiedades

dotnet_naming_symbols.properties.applicable_kinds = property
dotnet_naming_symbols.properties.applicable_accessibilities = public, internal, private, protected, protected_internal, private_protected
dotnet_naming_symbols.properties.required_modifiers =

# Estilos de nomenclatura para propiedades

dotnet_naming_style.pascal_case_for_properties.required_prefix =
dotnet_naming_style.pascal_case_for_properties.required_suffix =
dotnet_naming_style.pascal_case_for_properties.word_separator =
dotnet_naming_style.pascal_case_for_properties.capitalization = pascal_case

#### Estilos de nomenclatura ####

# Reglas de nomenclatura

dotnet_naming_rule.interface_should_be_begins_with_i.severity = suggestion
